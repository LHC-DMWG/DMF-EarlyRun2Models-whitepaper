
pdf: *.tex contributors.tex
	pdflatex doc.tex
	bibtex doc
	pdflatex doc.tex
	pdflatex doc.tex

view: pdf
	if [ `uname` = "Darwin" ]; then open doc.pdf; elif [ `uname` = "Linux" ]; then if [ -x `which okular` ]; then okular doc.pdf; elif [ -x `which acroread` ]; then acroread doc.pdf; fi; fi

contributors.tex: members-lhc-dmf-contributors.csv contributors.pl
	echo "% this file auto-generated by contributors.pl" > contributors.tex
	perl contributors.pl >> contributors.tex

clean:
	rm -f doc.aux doc.blg doc.log doc.out
	rm -f *~ tex/*~
	rm -f doc.pdf 
